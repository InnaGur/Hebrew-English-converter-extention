{
  "manifest_version": 3,
  "name": "Hebrew-English Text Converter",
  "version": "1.0",
  "icons": {
    "16": "icons/arrows16.png",
    "48": "icons/arrows48.png",
    "128": "icons/arrows128.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "commands"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/arrows16.png",
      "48": "icons/arrows48.png",
      "128": "icons/arrows128.png"
    }
  },
  "commands": {
    "convert-text-shortcut": {
      "suggested_key": {
        "default": "Ctrl+Shift+X"
      },
      "description": "Convert selected text between Hebrew and English"
    }
  }
}
